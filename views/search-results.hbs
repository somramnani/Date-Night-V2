<!-- Whole Results Section -->
<section class="results-page-column">
  <div data-aos="fade-in" class="row results-page-column-row">

    <!--Left Side-Filter Section-->
    <div class="col-lg-3 col-sm-2  filter-column ">
      <div class="mycontent-left current-itinerary-section container">
        <h5 class="text-center filter-header">
          Current Itinerary
        </h5>
        <hr class="solid">
        <div class="container ">
          <div class="row ">
            <div class="col m-2 ">
              {{> sample-card}}
            </div>
            <div class="col m-2">
              {{> sample-card}}
            </div>
          </div>
          <div class="text-center">
            <button>
              Add to Itinerary
            </button>
          </div>
        </div>
      </div>
    </div>

    <!--Right Side - Results Section (Cards will be outputed here) -->
    <div class="col-lg col-sm-2 right-side-results">
      <!-- Restaurant Results -->
      <div class="results-sections-styling" data-aos="fade-in" id="restaurant-results-section">
        <h3 class="results-header">Restaurants</h3>

        <!-- Cards -->
        <div class="container">
          <hr class="solid">
          <div class="row">
            {{#each restaurants}}
            <div class="col m-2 result-col">
              {{> restaurant-card
                  activityType="restaurant"
                  name=name 
                  price=price 
                  location=location 
                  rating=rating 
                  id=id 
                  img=image_url
                }}
            </div>
            {{/each}}
          </div>
        </div>
      </div>
      <!-- Events Results -->
      <div data-aos="fade-in" class="results-sections-styling" id="event-results-section">
        <h3 class="results-header">Events</h3>
        <div class="container">
          <hr class="solid">
          {{#if events}}
          <div class="row">
            {{#each events}}
            <div class="col m-2 result-col">
              {{> event-cards
                  activityType="event"
                  name=name 
                  price=price 
                  location=location 
                  rating=rating 
                  id=id 
                  img=image_url 
                }}
            </div>
            {{/each}}
            {{else}}
            <h4 class="text-center result-col">
              Sorry, there are no events happening in your area.
              </h5>
              {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</section>