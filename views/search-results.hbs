<!-- Whole Results Section -->
<section class="results-page-column">
  <div data-aos="fade-in" class="row results-page-column-row">
    <!--Left Side-Filter Section-->
    {{>itinerary-preview }}

    <!--Right Side - Results Section (Cards will be outputed here) -->
    <div class="col-lg col-md-2 right-side-results">
      <!-- Restaurant Results -->
      <div class="results-sections-styling" data-aos="fade-in" id="restaurant-results-section">
        <h3 class="results-header  text-center">Restaurants</h3>

        <!-- Cards -->
        <div class="container">
          <hr class="solid">
          {{#if restaurants}}
          <div class="row">
            {{#each restaurants}}
            <div class="col m-2 result-col">
              {{> result-cards
                  activityType="restaurant"
                  name=name 
                  price=price 
                  location=location 
                  rating=rating 
                  id=id 
                  img=image_url
                  reviews=review_count
              }}
            </div>
            {{/each}}
            {{else}}
            <h4 class="text-center result-col">
              Sorry, there are no restaurants in your area.
            </h4>
            {{/if}}
          </div>
        </div>
      </div>

      <!-- Events Results -->
      <div data-aos="fade-in" class="results-sections-styling" id="event-results-section">
        <h3 class="results-header text-center">Events</h3>
        <div class="container">
          <hr class="solid">
          {{#if events}}
          <div class="row">
            {{#each events}}
            <div class="col m-2 result-col">
              {{> result-cards
                  activityType="event"
                  name=name 
                  price=price 
                  location=location 
                  rating=rating 
                  id=id 
                  img=image_url 
                  url=event_site_url
                }}
            </div>
            {{/each}}
            {{else}}
            <h4 class="text-center result-col">
              Sorry, there are no events happening in your area.
            </h4>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>