<div id={{id}} class="card mx-auto result-cards">
  <img class="card-img-top" src={{img}} alt="Card image cap" />
  <div class="card-body">
    <h5 class="card-title">{{name}}</h5>
    <p class="card-text">
    </p>
    <p class="card-text">
      Location: {{location.address1}}
    </p>
    <p class="card-text">
      User Rating: {{rating}}
    </p>
    <p class="card-text">
      Price Range: {{price}}
    </p>
  </div>
  <div class="button ml-auto">
    <button 
      onclick="saveActivity({{idToString id}}, {{idToString activityType}})"
      class="plus-button plus-button--small"
    >
    </button>
  </div>
</div>